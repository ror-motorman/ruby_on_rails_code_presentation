source 'https://rubygems.org'
ruby '2.3.0'

gem 'rails', '4.2.6'

# Database & ORM
gem 'mysql2'

# Assets & HTML
gem 'sass-rails'
gem 'hamlit-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'
gem 'font-awesome-rails'
gem 'momentjs-rails'
gem 'bootstrap3-datetimepicker-rails'

# Form builder
gem 'simple_form'

# File uploader
gem 'carrierwave'

# Validator
gem 'client_side_validations'
gem 'client_side_validations-simple_form'

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'puma'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :test do
  gem 'minitest-rails'
  gem 'minitest-reporters'
end
