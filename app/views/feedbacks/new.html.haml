- content_for(:title, t('views.feedbacks.feedback_form'))
.row.centered-form
  .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = t('views.feedbacks.feedback_form')
      .panel-body
        = simple_form_for @feedback, validate: true do |f|
          = f.input :full_name
          = f.input :age
          = f.input :interview_date, as: :string, input_html: { data: { datetimepicker: true } }
          = f.input :document, as: :file
          = f.button :submit, class: 'btn btn-info btn-block'
